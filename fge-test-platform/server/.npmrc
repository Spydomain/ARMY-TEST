# Force npm to use legacy peer deps to avoid dependency conflicts
legacy-peer-deps=true

# Ensure we're using the correct registry
registry=https://registry.npmjs.org/

# Build settings for node-gyp
node_gyp=@mapbox/node-pre-gyp

# Optional: Set Python path if needed
# python=/path/to/python

# Optional: Increase network timeout (in milliseconds)
timeout=60000

# Optional: Disable package-lock.json if needed
# package-lock=false

# Optional: Set engine strict to false to avoid engine version conflicts
engine-strict=false
